<!-- Input file for the Tophat problem with refined geometry -->
<prototype>
  <common>
    <method>IMC</method>
    <t_start>0.0</t_start>
    <t_stop>0.1</t_stop>
    <dt_start>0.01</dt_start>
    <t_mult>1.0</t_mult>
    <dt_max>1.0</dt_max>
    <Tm_initial>1.0</Tm_initial>
    <Tr_initial>1.0</Tr_initial>
    <photons>250000</photons>
    <seed>14706</seed>
    <tilt>FALSE</tilt>
    <output_frequency>1</output_frequency>
  </common>

  <debug_options>
    <print_verbose>FALSE</print_verbose>
    <print_mesh_info>FALSE</print_mesh_info>
  </debug_options>


  <spatial>
    <n_x_elements>20</n_x_elements>
    <dx>1.0</dx>
    <n_y_elements>20</n_y_elements>
    <dy>1.0</dy>
    <n_z_elements>20</n_z_elements>
    <dz>1.0</dz>

    <bc_right>REFLECT</bc_right>
    <bc_left>REFLECT</bc_left>

    <bc_up>REFLECT</bc_up>
    <bc_down>REFLECT</bc_down>

    <bc_top>REFLECT</bc_top>
    <bc_bottom>REFLECT</bc_bottom>
  </spatial>

  <source>
    <source_element>0</source_element>
    <T_source>1.0</T_source>
  </source>

  <material>
    <density>1.0</density>
    <CV>10.0</CV>
    <opacA>100.0</opacA>
    <opacB>0.0</opacB>
    <opacC>0.0</opacC>
  </material>

</prototype>
